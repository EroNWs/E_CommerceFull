@model List<Company>
@if (TempData["success"] != null)
{
	<h2>@TempData["success"]</h2>
}

<div class="card shadow border-0 mt-4 mb-5">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Company List</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pt-4">
			<div class="col-6">
			</div>

			<div class="col-6 text-end pb-3">
				<a asp-controller="Company" asp-action="Upsert" class="btn btn-outline-secondary">
					<i class="bi bi-airplane-engines"></i> Create New Company <i class="bi bi-airplane-engines"></i>
				</a>
			</div>
		</div>


		<table id="tblData" class="table table-bordered table-striped" style="width:100%">
			<thead>
				<tr>
					<th>Company Name</th>
					<th>Address</th>
					<th>City</th>
					<th>State</th>
					<th>Phone Number</th>
					<th></th>
				</tr>
			</thead>




		</table>
	</div>

</div>
<br />
<br />

@section Scripts{
	<script src="~/js/company.js"></script>
}