@model List<Category>
@if (TempData["success"] != null)
{
		<h2>@TempData["success"]</h2>
}

<div class ="card shadow border-0 mt-4 mb-5">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
		<div class ="col-12 text-center">
			<h2 class="text-white py-2">Category List</h2>
		</div>
	</div>
</div>
<div class="card-body p-4">
	<div class="row pt-4">		
		<div class="col-6">
			
		</div>

		<div class="col-6 text-end pb-3">
			<a asp-controller="Category" asp-action="Create" class="btn btn-outline-secondary">
				<i class="bi bi-airplane-engines"></i> Create New Category <i class="bi bi-airplane-engines"></i>
			</a>
		</div>
	</div>


<table class="table table-bordered table-striped">
	<thead>
	<tr>
		<th>
			Category Name
		</th>
		<th>
			Display Order
		</th>
		<th>

		</th>
	</tr>
	</thead>
	<tbody>
				@foreach (var item in Model.OrderBy(x => x.DisplayOrder))
				{
					<tr>
						<td>@item.Name</td>
						<td>@item.DisplayOrder</td>	
						<td>
							<div class="w-75 btn-group" role="group">
								<a asp-controller ="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-delete mx-2">
										<i class="bi bi-pencil"></i> Edit</a>
									<a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-delete mx-2">
										<i class="bi bi-trash2"></i> Delete</a>
							</div>
						</td>

					</tr>				
				}

	</tbody>
</table>
</div>

</div>
<br />
